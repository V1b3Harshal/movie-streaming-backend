# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Railway-specific configurations
RAILWAY_PUBLIC_DOMAIN=your-main-backend.railway.app

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/movie-streaming

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=15m

# TMDB API Configuration
TMDB_API_KEY=your-tmdb-api-key
TMDB_API_URL=https://api.themoviedb.org/3

# Trakt API Configuration
TRAKT_CLIENT_ID=your-trakt-client-id
TRAKT_CLIENT_SECRET=your-trakt-client-secret
TRAKT_API_URL=https://api.trakt.tv

# Providers Backend Configuration
PROVIDERS_BACKEND_URL=https://your-providers-backend.railway.app
INTERNAL_API_KEY=your-secure-internal-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_FILE=logs/app.log

# Healthchecks.io
HEALTHCHECKS_IO_URL=https://hc-ping.com/your-uuid