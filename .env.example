# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Railway-specific configurations
RAILWAY_PUBLIC_DOMAIN=your-main-backend.railway.app

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/movie-streaming

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=15m

# TMDB API Configuration
TMDB_API_KEY=your-tmdb-api-key
TMDB_API_URL=https://api.themoviedb.org/3

# Trakt API Configuration
TRAKT_CLIENT_ID=your-trakt-client-id
TRAKT_CLIENT_SECRET=your-trakt-client-secret
TRAKT_API_URL=https://api.trakt.tv

# Providers Backend Configuration
PROVIDERS_BACKEND_URL=https://your-providers-backend.railway.app
INTERNAL_API_KEY=5ef0ad5c74b1c1a361c289ae1f71aa5ce3bf90b06b3effd9fb9cd13d636c9163

# Watch Together Configuration
WATCH_TOGETHER_MAX_PARTICIPANTS=10
WATCH_TOGETHER_ROOM_CLEANUP_INTERVAL=86400000  # 24 hours in milliseconds
WATCH_TOGETHER_SYNC_THRESHOLD=0.5  # seconds
WATCH_TOGETHER_HEARTBEAT_INTERVAL=30000  # 30 seconds
WATCH_TOGETHER_RECONNECT_ATTEMPTS=5
WATCH_TOGETHER_RECONNECT_DELAY=1000  # 1 second

# Upstash Redis Configuration
UPSTASH_REDIS_REST_URL=your-upstash-redis-rest-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-rest-token

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_FILE=logs/app.log

# Healthchecks.io
HEALTHCHECKS_IO_URL=https://hc-ping.com/your-uuid